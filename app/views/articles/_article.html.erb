<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= link_to article.title, article %></h4>
        <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
          
        <div class="card-footer">
          <div class="form-group">
            <script type="text/javascript">
              function show_comment(){
                var comment = document.getElementById("input-comment");
                var newComment = document.getElementById("output-commment");
                newComment.innerHTML = comment.value;
                comment.value = "";
              }
            </script>
            <div class="card-text" id ="output-commment"></div>

            <div class="input-group">
              <input type="text" class="form-control" id="input-comment" placeholder="Comment here..." value="">
              <span class="input-group-btn">
                <button class="btn btn-secondary" type="button" onclick="show_comment()">Send!</button>
              </span>
            </div>
          </div>
          <div class="card-footer">
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
            <button type="button" class="btn btn-secondary">
            <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?'} %>
            </button>
          </div>  
        </div>
      </div>
    </div>
  </div>    
</div>